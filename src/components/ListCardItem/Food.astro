---
import { Icon } from "astro-icon/components";
import ListCardItem from "../ListCardItem.astro";
import ListCardItemAttributes from "../ListCardItemAttributes.astro";
import ListCardItemAttribute from "../ListCardItemAttribute.astro";

const { link, icon, name, location, kind } = Astro.props;
---

<ListCardItem link={link}>
  <div
    slot="image"
    class="bg-green-200 w-16 h-16 flex items-center justify-center group-hover:bg-black group-hover:text-green-200"
  >
    <Icon name={icon} class="w-12 h-12" />
  </div>

  <span class="group-hover:text-green-600" slot="title">
    {name}
  </span>

  <ListCardItemAttributes slot="attributes">
    <ListCardItemAttribute
      icon="mdi:location"
      name="Location"
      value={location}
    />
    <ListCardItemAttribute icon="mdi:chef-hat" name="Kind" value={kind} />
  </ListCardItemAttributes>
</ListCardItem>
