---
import { Icon } from "astro-icon/components";
const pathname = new URL(Astro.request.url).pathname;
---

<div class="max-w-(--breakpoint-xl) mx-auto py-4">
  <nav class="relative">
    <div class="flex border-b border-gray-200">
      <a
        class:list={[
          "px-6 py-4 text-sm font-medium inline-flex items-center gap-2 relative",
          {
            "text-gray-900 bg-white border-b-2 border-white -mb-px":
              pathname.startsWith("/routes/"),
            "text-gray-500 bg-gray-100 hover:text-gray-700 hover:bg-gray-200":
              !pathname.startsWith("/routes/"),
          },
        ]}
        href="/routes/"
      >
        <Icon name="mdi:map" class="w-4 h-4" />
        Map
      </a>

      <a
        class:list={[
          "px-6 py-4 text-sm font-medium inline-flex items-center gap-2 relative",
          {
            "text-gray-900 bg-white border-b-2 border-white -mb-px":
              pathname.startsWith("/list"),
            "text-gray-500 bg-gray-100 hover:text-gray-700 hover:bg-gray-200":
              !pathname.startsWith("/list"),
          },
        ]}
        href="/list/"
      >
        <Icon name="mdi:view-list" class="w-4 h-4" />
        List
      </a>
    </div>
  </nav>
</div>

<slot />
