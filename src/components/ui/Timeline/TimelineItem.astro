---
const { height } = Astro.props;
---

<li
  class="min-h-12 flex"
  style={{ minHeight: height ? `${Math.max(height, 40)}px` : "24px" }}
  class:list={{
    "before-filler": !Astro.slots.has("opposite-content"),
    "after-filler": !Astro.slots.has("content"),
  }}
>
  <slot name="opposite-content" />
  <slot name="separator" />
  <slot name="content" />
</li>

<style>
  .before-filler:before {
    content: "";
    flex: 1;
    padding: 6px 16px;
  }
  .after-filler:after {
    content: "";
    flex: 1;
    padding: 6px 16px;
  }
</style>
