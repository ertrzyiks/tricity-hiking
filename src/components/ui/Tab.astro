---
const { href } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const isActive = pathname === href || pathname === `${href}/`;
---

<a
  href={href}
  class:list={[
    "inline-block py-4 px-6 text-gray-500 hover:text-gray-800 font-medium border-b-2 border-transparent whitespace-nowrap",
    {
      "border-b-green-300": isActive,
      "text-green-600": isActive,
    },
  ]}
  role="tab"
  aria-selected="true"
>
  <slot />
</a>
