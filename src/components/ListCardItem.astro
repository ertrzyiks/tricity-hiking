---
const { name, description, link, imageSrc } = Astro.props;
---

<li class="my-4 border-b border-solid border-slate-200 w-full">
  <a class="flex py-4 px-2" href={link}>
    {imageSrc && <img src={imageSrc} class="w-20 h-20" />}
    <div class="flex flex-col w-full">
      <div class="text-xl ml-4">
        <slot name="title" />
      </div>
      {description && <div class="text-l ml-4">{description}</div>}

      <div class="px-4 py-4">
        <slot name="attributes" />
      </div>
    </div>
  </a>
</li>
