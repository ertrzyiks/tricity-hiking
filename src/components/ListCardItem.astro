---
const { link } = Astro.props;

const securityProps = link.startsWith("http")
  ? { target: "_blank", rel: "noopener" }
  : {};
---

<li
  class="my-4 border-b border-solid border-slate-200 last:border-0 w-full group"
>
  <a class="flex py-4" href={link} {...securityProps}>
    <slot name="image" />
    <div class="flex flex-col w-full">
      <div class="text-2xl ml-4">
        <slot name="title" />
      </div>

      {
        Astro.slots.has("description") && (
          <div class="text-l ml-4 text-slate-500">
            <slot name="description" />
          </div>
        )
      }

      <div class="px-4 py-4">
        <slot name="attributes" />
      </div>
    </div>
  </a>
</li>
