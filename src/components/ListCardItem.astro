---
const { name, description, link, imageSrc } = Astro.props
---
<li class="my-4 border border-solid border-slate-300">
  <a class="flex py-4 px-2" href={link}>
    {imageSrc && (<img src={imageSrc} class="w-20 h-20" />)}
    <div class="flex flex-col">
      <div class="text-xl ml-4">{name}</div>
      {description && <div class="text-l ml-4">{description}</div>}

      <div class="flex flex-col px-4 py-4">
        <div class="grid grid-rows-2 gap-x-4 gap-y-2 grid-flow-col">
          <slot />
        </div>
      </div>
    </div>

  </a>
</li>
