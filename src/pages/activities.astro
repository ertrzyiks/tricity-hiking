---
import Layout from "../layouts/Layout.astro";
import ActivityList from "../components/ui/ActivitiesList/ActivityList.astro";
import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog");
const activities = allBlogPosts.filter((post) => post.data.category && !post.data.draft);
---

<Layout title="Outdoor activities in GdaÅ„sk, Sopot, and Gdynia">
  <div
    class="max-w-(--breakpoint-xl) mx-auto relative px-2 lg:px-0"
    transition:name="map"
  >
    <ActivityList activities={activities} groupBy="category" />
  </div>
</Layout>
